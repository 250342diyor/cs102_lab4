#include <iostream>
using namespace std;
int main() {
    int n,option;
    cout << "Enter a number: ";
    cin >> n;
    if(n<0) {
        option = 1;
    }else if(n==0) {
        option = 3;
    }else if(n>1) {
        option = 2;
    }
    switch (option) {
        case 1:
            cout << "it's negative" << endl;
            break;
        case 2:
            cout << "it's positive" << endl;
            break;
        case 3:
            cout << "it's zero" << endl;
            break;
    }
}
